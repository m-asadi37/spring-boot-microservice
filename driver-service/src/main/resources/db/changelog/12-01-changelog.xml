<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1760251298099-1" author="m.asadi">
        <createSequence incrementBy="1" sequenceName="primary_sequence" startValue="1"/>

        <createTable tableName="driver">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_driver"/>
            </column>
            <column name="date_created" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="family" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="license_number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="wallet_id" type="BIGINT"/>
        </createTable>

        <addUniqueConstraint columnNames="phone" constraintName="uc_driver_phone" tableName="driver"/>
    </changeSet>

</databaseChangeLog>