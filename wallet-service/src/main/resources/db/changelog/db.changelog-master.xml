<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1760271337728-1" author="m.asadi">
        <createSequence incrementBy="1" sequenceName="primary_sequence" startValue="1"/>

        <createTable tableName="wallet">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_wallet"/>
            </column>
            <column name="date_created" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="passenger_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>